    <modelVersion>4.0.0</modelVersion>

    <groupId>com.dailycodebuffer</groupId>
    <artifactId>spring-security-tutorial</artifactId>
    <version>1.0-SNAPSHOT</version>
    <packaging>pom</packaging>
    <properties>
        <maven.compiler.source>17</maven.compiler.source>
        <maven.compiler.target>17</maven.compiler.target>
    </properties>

    <modules>
        <module>SpringBootOauth2AuthorizationServer</module>
        <module>SpringBootOauth2Client</module>
        <module>SpringBootOauth2ResourceServer</module>
